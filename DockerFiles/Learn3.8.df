FROM linnil1/serverbox:show3.7

# python basic
RUN apt update -y && \
    apt install -y \
        python3-pip \
        python3-dev \
        python3-tk && \
    python3 -m pip install --upgrade pip && \
    pip3 --no-cache-dir install --upgrade \
         numpy \
         scipy \
         sympy \
         pandas \
         matplotlib \
         Pillow \
         six \
         python-dateutil \
         virtualenv \
         requests \
         opencv-python \
         sklearn \
         scikit-learn \
         scikit-image \
         tqdm \
         ipython \
         jupyter \
         jupyterhub \
         statsmodels \
         gym \
         decorator && \
    rm -rf /var/lib/apt/lists/*

# powerful deep learning package
RUN pip3 --no-cache-dir install --upgrade \
         torch==1.4.0 torchvision
RUN pip3 --no-cache-dir install --upgrade \
         tensorflow-gpu==2.1.0 \
         keras==2.3.1
RUN pip3 --no-cache-dir install --upgrade \
         fastai==1.0.60

# Final
CMD ["bash", "/home/ubuntu/.startup.sh"]
